    <h2 class="uppercase text-5xl font-semibold">
        13 de julio<span aria-hidden class="hidden md:inline mx-1"> .</span>
        <br aria-hidden class="block md:hidden"/>
        <span>
            <script is:inline>
                const END_DATE = 1704612400;
                const date = new Date(END_DATE);
                const time = date.toLocaleTimeString("es", {
                    hour: "2-digit",
                    minute:"2-digit"
                });

                //Obteniendo current timezone
                const tzOffset = date.getTimezoneOffset() / 60
                const diff = tzOffset * -1
                const gmt = diff > 0 ? `GMT+${diff}` : `GMT-${Math.abs(diff)}`

                const TZ_DICTIONARY = {
                    "GMT+1": "CET",
                }
                const tz = TZ_DICTIONARY[gmt] ?? gmt

                const selfScript = document.currentScript;
                selfScript.parentNode.innerHTML = `${time}H ${tz}`
            </script>
        </span>
    </h2>
